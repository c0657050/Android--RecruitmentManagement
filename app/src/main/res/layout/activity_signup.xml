<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"

    android:background="#ffffff"   >


    <RelativeLayout
        android:id="@+id/rel_sign_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#0033cc" >

        <TextView
            android:id="@+id/txt_create_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="SIGN UP"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_sign_employr"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back" />
    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/rel_sign_top"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bigbox"
            android:id="@+id/rel_scrl1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/first_name_edit"
                android:hint="First name"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                />


            <View
                android:id="@+id/v_name"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/first_name_edit"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:background="#A5A2A3" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/last_name_edit"
                android:paddingLeft="15dp"
                android:layout_below="@+id/first_name_edit"
                android:layout_marginTop="10dp"
                android:hint="Last name"
                android:maxLines="1"
                android:maxLength="20"
                android:background="@null"
                />

            <View
                android:id="@+id/v_cat_com_edit"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/last_name_edit"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:background="#A5A2A3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/company_name_edit"
                android:layout_below="@+id/last_name_edit"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:hint="Company Name"
               android:maxLength="50"
                android:maxLines="1"
                android:background="@null"
                />
            <View
                android:id="@+id/v_email_comp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/company_name_edit"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:background="#A5A2A3" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/reg_num_edit"
                android:layout_below="@+id/company_name_edit"
                android:layout_marginTop="10dp"
                android:hint="Registration No. "
                android:inputType="number"

                android:paddingLeft="15dp"
android:maxLength="40"
                android:maxLines="1"

                android:background="@null"
                />
            <View
                android:id="@+id/v_number_com_edit"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/reg_num_edit"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:background="#A5A2A3" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/add_edit"
                android:layout_below="@+id/reg_num_edit"
                android:layout_marginTop="10dp"
                android:hint="Address"
                android:paddingLeft="15dp"
                android:background="@null"
                android:maxLines="3"
                android:maxLength="50"

                />

            <View
                android:id="@+id/v_reg_com_edit"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/add_edit"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:background="#A5A2A3" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/con_edit"
                android:hint="Phone No."
                android:layout_below="@+id/add_edit"
                android:paddingLeft="15dp"
                android:inputType="number"
                android:background="@null"
                android:maxLines="1"
                android:maxLength="10"
                />

            <View
                android:id="@+id/v_userName_com_edit"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/con_edit"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:background="#A5A2A3" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/email_sign_edit"
                android:layout_below="@+id/con_edit"
                android:layout_marginTop="10dp"
                android:hint="Email ID"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:background="@null"
                />

            <View
                android:id="@+id/v_add_com_edit"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/email_sign_edit"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:background="#A5A2A3" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/pw"
                android:layout_below="@+id/email_sign_edit"
                android:paddingLeft="15dp"
                android:hint="Password"
                android:maxLength="15"
                android:maxLines="1"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"
                android:background="@null"/>
            <View
                android:id="@+id/v_pw"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/pw"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:background="#A5A2A3" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/cpw"
                android:layout_below="@+id/pw"
                android:paddingLeft="15dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:maxLength="15"
                android:maxLines="1"/>
            <View
                android:id="@+id/v_cpw"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/cpw"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:background="#A5A2A3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Sign Up"
                android:layout_marginTop="20dp"
                android:id="@+id/submit"
                android:textSize="20sp"
                android:layout_below="@+id/v_cpw"
                android:layout_marginBottom="15dp"
                android:textColor="#fff"
android:background="#0033cc"
                android:paddingBottom="3dp"
                android:paddingTop="2dp"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>

    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_above="@+id/scrollView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />
-->

</RelativeLayout>
