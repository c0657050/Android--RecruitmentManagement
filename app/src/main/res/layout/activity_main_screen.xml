<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    tools:context="com.example.nikhat.recruitment.MainScreen">

    <TextView android:text="As Employer" android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:layout_marginTop="122dp"
        android:id="@+id/empyer"
        android:textColor="#000000"
        android:background="@drawable/border"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="As Employee"
        android:id="@+id/employee"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_below="@+id/empyer"
        android:layout_alignLeft="@+id/empyer"
        android:layout_alignStart="@+id/empyer"
        android:layout_marginTop="70dp"
        android:background="@drawable/border"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="25sp"
        android:textColor="#000000"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/empyer"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
