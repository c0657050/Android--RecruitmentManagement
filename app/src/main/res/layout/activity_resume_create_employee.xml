<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.recruitment.Resume_create_employee">


    <RelativeLayout
        android:id="@+id/rel_top_resume_employee"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#0033cc" >

        <TextView
            android:id="@+id/txt_res_epmy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Resume"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_res_epmy_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back" />
    </RelativeLayout>
   <!-- <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
         android:background="@drawable/my_groups_newgroup"
        android:layout_below="@+id/rel_top_resume_employee"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"

        >


        </RelativeLayout>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bigbox"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/rel_top_resume_employee">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView_resume"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rel_resume_top"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                >
               <!-- <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/res_user_id"
                    android:hint="User ID"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:paddingLeft="8dp"
                    android:background="@null"
                    />
                <View
                    android:id="@+id/v_res_user_id"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/res_user_id"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="2dp"
                    android:background="#A5A2A3" />-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/res_fname"
                    android:hint="First name"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:paddingLeft="8dp"
                    android:background="@null"

                    />
                <View
                    android:id="@+id/v_res_fname"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/res_fname"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="2dp"
                    android:background="#A5A2A3" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/res_lname"
                    android:hint="Last name"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:paddingLeft="8dp"
                    android:background="@null"
                    android:layout_below="@+id/v_res_fname"
                    />
                <View
                    android:id="@+id/v_res_lname"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/res_lname"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="2dp"
                    android:background="#A5A2A3" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/res_dob"
                    android:hint="DOB"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:paddingLeft="8dp"
                    android:background="@null"
                    android:layout_below="@+id/v_res_lname"
                    />
                <View
                    android:id="@+id/v_res_dob"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/res_dob"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="2dp"
                    android:background="#A5A2A3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/res_gender"
                android:hint="Gender"
                android:maxLines="1"
                android:maxLength="30"
                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:textSize="18sp"
                android:background="@null"
                android:layout_below="@+id/v_res_dob"
                />
            <View
                android:id="@+id/v_res_gender"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/res_gender"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="2dp"
                android:background="#A5A2A3" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/res_obj"
                    android:hint="Objective"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:paddingLeft="8dp"
                    android:background="@null"
                    android:layout_below="@+id/v_res_gender"
                    />
                <View
                    android:id="@+id/v_res_obj"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/res_obj"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="2dp"
                    android:background="#A5A2A3" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/res_area_int"
                    android:hint="Area of interest"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:paddingLeft="8dp"
                    android:background="@null"
                    android:layout_below="@+id/v_res_obj"
                    />
                <View
                    android:id="@+id/v_res_area_int"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/res_area_int"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="2dp"
                    android:background="#A5A2A3" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/res_primary"
                    android:hint="Primary skills"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:paddingLeft="8dp"
                    android:background="@null"
                    android:layout_below="@+id/v_res_area_int"
                    />
                <View
                    android:id="@+id/v_res_primary"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/res_primary"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="2dp"
                    android:background="#A5A2A3" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/res_exp"
                    android:hint="Experience(in years)"

                    android:maxLines="1"

                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:textSize="18sp"
                    android:background="@null"
                    android:layout_below="@+id/v_res_primary"
                    />
                <View
                    android:id="@+id/v_res_exp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/res_exp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="2dp"
                    android:background="#A5A2A3" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/res_position"
                    android:hint="Position"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:paddingLeft="8dp"
                    android:background="@null"
                    android:layout_below="@+id/v_res_exp"
                    />
                <View
                    android:id="@+id/v_res_position"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/res_position"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="2dp"
                    android:background="#A5A2A3" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/res_prefered_loc"
                    android:hint="Preferred location"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:paddingLeft="8dp"
                    android:background="@null"
                    android:layout_below="@+id/v_res_position"
                    android:paddingTop="5dp"
                    android:textSize="18sp"

                    />
                <View
                    android:id="@+id/v_res_pre_loc"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/res_prefered_loc"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="2dp"
                    android:background="#A5A2A3" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/res_quali"
                    android:hint="Highest qualification"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:paddingLeft="8dp"
                    android:background="@null"
                    android:layout_below="@+id/v_res_pre_loc"
                    />
                <View
                    android:id="@+id/v_res_quali"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/res_quali"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="2dp"
                    android:background="#A5A2A3" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/res_strength"
                    android:hint="Strengths"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:paddingLeft="8dp"
                    android:background="@null"
                    android:layout_below="@+id/v_res_quali"
                    />
                <View
                    android:id="@+id/v_res_strength"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/res_strength"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="2dp"
                    android:background="#A5A2A3" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/res_extra"
                    android:hint="Extra curricular"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:paddingLeft="8dp"
                    android:background="@null"
                    android:layout_below="@+id/v_res_strength"
                    />
                <View
                    android:id="@+id/v_res_extra"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/res_extra"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="2dp"
                    android:background="#A5A2A3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Submit"
                    android:layout_marginTop="15dp"
                    android:id="@+id/res_submit"
                    android:textSize="28sp"
                    android:layout_below="@+id/v_res_extra"
                    android:layout_marginBottom="25dp"
                    android:textColor="#fff"
                    android:background="#0033cc"
                    android:paddingBottom="3dp"
                    android:paddingTop="2dp"
                    android:paddingRight="3dp"
                    android:paddingLeft="3dp"
                    android:layout_centerHorizontal="true" />


            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>

</RelativeLayout>
